/* pages/home/home.wxss */
.box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  height: 185rpx;
  width: 100%;
  background: red;
}

.tab {
  display: flex;
  flex-direction: row;
  /* border: 1px solid black; */
  background: #fff;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 120rpx;
  border-radius: 20px;
  padding: 5rpx;
  align-items: center;
}

.searchIcon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  padding-right: 10rpx;
  border-right: 1px solid gray;
}

.searchText {
  width: 500rpx;
  margin-left: 20rpx;
}

.searchBtn {
  width: 60rpx;
  height: 50rpx;
  font-size: 24rpx;
  border-radius: 20px;
  background-color: orange;
  text-align: center;
  line-height: 50rpx;
  color: #fff;

}

.main {

  background-color: rgb(232, 226, 224);
}



.swiperTab {
  padding-top: 20rpx;
  /* display: flex; */
  /* border-radius: 20px; */
  /*  flex-direction: row; */
  width: 100%;
  height: auto;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.swiper {

  width: 100%;
  height: 100%;
}

.swiperImg {
  width: 90%;
  height: 300rpx;
}

.cate {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10rpx;
  background-color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 5px;
}

.cateImg {
  width: 60rpx;
  height: 60rpx;
}

.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 30rpx;
  flex: 25%;
  align-items: center;
}

.shop {
  margin: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

  padding-bottom: 20rpx;
  align-items: center;
  justify-content: center;
}

.shopItem {
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 5rpx;
  border-radius: 5px;
  padding-bottom: 5rpx;
}

.shopImage {
  width: 350rpx;
  height: 200rpx;
}

.shopItemTitle {
  padding-left: 5rpx;
  font-size: 25rpx;
}

.shopItemPrice {
  color: orange;
  padding-left: 5rpx;
}

.shopItemNum {
  font-size: 20rpx;
  color: gray;
  padding-left: 5rpx;
}

.shopText {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shopTask {
  margin-left: 15rpx;
  font-size: 18rpx;
  border: 1rpx solid orange;
  color: orange;
  padding: 2rpx
}